<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Google Docs Comments</title>
    <style>
        body {
            font-family: Arial, sans-serif;
            marginTop: 15px;
            padding: 0;
            background-color: #f4f4f4;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        .container {
            width: 100%;
            max-width: 600px;
            background-color: #fff;
            border-radius: 10px;
            box-shadow: 0 0 10px rgba(0, 0, 0, 0.1);
            padding: 20px;
        }

        .comment {
            margin-bottom: 10px;
            padding: 15px;
            background-color: #f9f9f9;
            border-radius: 5px;
            position: relative;
            overflow: hidden;
        }

        .author {
            font-weight: bold;
            margin-bottom: 5px;
        }

        .timestamp {
            color: #777;
            font-size: 12px;
            margin-bottom: 5px;
        }

        .content {
            margin-bottom: 10px;
            overflow: hidden;
            text-overflow: ellipsis;
            display: -webkit-box;
            -webkit-line-clamp: 2;
            -webkit-box-orient: vertical;
        }

        .reply-comments {
            margin-top: 10px;
            padding-left: 20px;
            border-left: 2px solid #ccc;
        }

        .avatar {
            width: 40px;
            height: 40px;
            border-radius: 50%;
            margin-right: 10px;
            background-color: #ccc;
            float: left;
            overflow: hidden;
        }

        .avatar img {
            width: 100%;
            height: auto;
        }
    </style>
</head>

<body>
    <div class="container">
        <h2 style="text-align: center;">Student submission comments</h2>
        <div class="comment">
            <div class="avatar">
                <img src="https://static-00.iconduck.com/assets.00/profile-default-icon-2048x2045-u3j7s5nj.png"
                    alt="user avatar" />
            </div>
            <div class="author"><%= comment.userId.name %></div>
            <div class="timestamp"><%= comment.createdAt %></div>
            <div class="content"><%= comment.content %></div>
            <% if(comment.replies && comment.replies.length > 0) { %>
            <div class="reply-comments">
                <% comment.replies.forEach(function(reply) { %>
                <div class="comment">
                    <div class="avatar">
                        <img src="https://static-00.iconduck.com/assets.00/profile-default-icon-2048x2045-u3j7s5nj.png"
                            alt="user avatar" />
                    </div>
                    <div class="author"><%= reply.userId.name %></div>
                    <div class="timestamp"><%= reply.createdAt %></div>
                    <div class="content"><%= reply.content %></div>
                </div>
                <% }); %>
            </div>
            <% } %>
        </div>
    </div>
</body>

</html>
